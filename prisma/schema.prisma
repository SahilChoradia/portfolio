// This is your Prisma schema file for MongoDB
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ContactMessage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  contactInfo String
  message     String
  status      String   // 'new' or 'read'
  createdAt   DateTime @default(now())

  @@map("contact_messages")
}

model Profile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  bio         String
  tagline     String
  skills      String[]
  personality String
  lastUpdated DateTime
  generatedAt DateTime

  @@map("profile")
}

model YouTubeVideo {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  videoId             String   @unique
  title               String
  description         String
  thumbnail           String
  publishedAt         String
  viewCount           String
  duration            String
  url                 String
  liveBroadcastContent String?
  channelId           String
  isShort             Boolean?
  isVideo             Boolean?
  isLive              Boolean?

  @@map("youtube_videos")
}

model InstagramPost {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  postId     String   @unique
  postUrl    String
  accountType String
  timestamp  String

  @@map("instagram_posts")
}

model SyncLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  status    String
  message   String
  timestamp DateTime
  data      Json?

  @@map("sync_logs")
}

